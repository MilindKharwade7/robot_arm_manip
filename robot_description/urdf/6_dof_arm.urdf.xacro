<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="minimal_arm">

    <link name="world"/>    
  <joint name="base_joint" type="fixed">
    <parent link="world"/>
    <child link="base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- Base Link -->
  <link name="base_link">
    <visual>
      <origin xyz="0.0 0.0 1.25" rpy="0 0 0"/>
      <geometry><box size="0.1 0.1 2.5"/></geometry>
      <material name="Grey"><color rgba="0.7 0.7 0.7 1.0"/></material>
    </visual>
    <collision>
      <origin xyz="0.0 0.0 1.25" rpy="0 0 0"/>
      <geometry><box size="0.1 0.1 2.5"/></geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Arm Joints and Links (6 DOF) -->
  <!-- Joint 1 -->
  <joint name="joint1" type="revolute">
    <parent link="base_link"/>
    <child link="link1"/>
    <origin xyz="0 0 2" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-3.14" upper="3.14" effort="100" velocity="0.5"/>
  </joint>
  <link name="link1">
    <visual>
      <origin xyz="0.05 0.0 0.0" rpy="0 0 0"/>
      <geometry><box size="0.1 0.1 0.1"/></geometry>
      <material name="Blue"><color rgba="0.0 0.0 0.8 1.0"/></material>
    </visual>
    <collision>
      <origin xyz="0.05 0.0 0.0" rpy="0 0 0"/>
      <geometry><box size="0.1 0.1 0.1"/></geometry>
    </collision>
    <inertial>
      <mass value="0.05"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>

  <!-- Joint 2 -->
  <joint name="joint2" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="0.1 0.0 0.0" rpy="0 0 0"/> <!-- Rotate to align axis -->
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="100" velocity="0.5"/>
  </joint>
  <link name="link2">
    <visual>
      <origin xyz="0.05 0.0 0.0" rpy="0 0 0"/>
      <geometry><box size="0.1 0.1 0.1"/></geometry>
      <material name="Red"><color rgba="0.8 0.0 0.0 1.0"/></material>
    </visual>
    <collision>
      <origin xyz="0.05 0.0 0.0" rpy="0 0 0"/>
      <geometry><box size="0.1 0.1 0.1"/></geometry>
    </collision>
    <inertial>
      <mass value="0.05"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>
  
  <!-- Joint 3 -->
  <joint name="joint3" type="revolute">
    <parent link="link2"/>
    <child link="link3"/>
    <origin xyz="0.1 0.0 0.0" rpy="0 0 0"/> <!-- Rotate to align axis -->
    <axis xyz="1 0 0"/>
    <limit lower="-1.57" upper="1.57" effort="100" velocity="0.5"/>
  </joint>
  <link name="link3">
    <visual>
      <origin xyz="0.5 0.0 0.0" rpy="0 0 0"/>
      <geometry><box size="1 0.1 0.1"/></geometry>
      <material name="Green"><color rgba="0.0 0.8 0.0 1.0"/></material>
    </visual>
    <collision>
      <origin xyz="0.5 0.0 0.0" rpy="0 0 0"/>
      <geometry><box size="1 0.1 0.1"/></geometry>
    </collision>
    <inertial>
      <mass value="0.05"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>
  
  <!-- Joint 4 -->
  <joint name="joint4" type="revolute">
    <parent link="link3"/>
    <child link="link4"/>
    <origin xyz="1 0.0 0.0" rpy="0 0 0"/> <!-- Rotate to align axis -->
    <axis xyz="0 0 1"/>
    <limit lower="0" upper="3.14" effort="100" velocity="0.5"/>
  </joint>
  <link name="link4">
    <visual>
      <origin xyz="0.05 0.0 0.0" rpy="0 0 0"/>
      <geometry><box size="0.1 0.1 0.1"/></geometry>
      <material name="Blue"><color rgba="0.0 0.0 0.8 1.0"/></material>
    </visual>
    <collision>
      <origin xyz="0.05 0.0 0.0" rpy="0 0 0"/>
      <geometry><box size="0.1 0.1 0.1"/></geometry>
    </collision>
    <inertial>
      <mass value="0.05"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>
  
  <!-- Joint 5 -->
  <joint name="joint5" type="revolute">
    <parent link="link4"/>
    <child link="link5"/>
    <origin xyz="0.05 0.0 0.0" rpy="0 0 0"/> <!-- Rotate to align axis -->
    <axis xyz="1 0 0"/>
    <limit lower="-1.57" upper="1.57" effort="100" velocity="0.5"/>
  </joint>
  <link name="link5">
    <visual>
      <origin xyz="0.5 0.0 0.0" rpy="0 0 0"/>
      <geometry><box size="1 0.1 0.1"/></geometry>
      <material name="Red"><color rgba="0.8 0.0 0.0 1.0"/></material>
    </visual>
    <collision>
      <origin xyz="0.5 0.0 0.0" rpy="0 0 0"/>
      <geometry><box size="1 0.1 0.1"/></geometry>
    </collision>
    <inertial>
      <mass value="0.05"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>
  
  <!-- Joint 6 -->
  <joint name="joint6" type="revolute">
    <parent link="link5"/>
    <child link="link6"/>
    <origin xyz="1 0.0 0.0" rpy="0 0 0"/> <!-- Rotate to align axis -->
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="100" velocity="0.5"/>
  </joint>
  <link name="link6">
    <visual>
      <origin xyz="0.05 0.0 0.0" rpy="0 0 0"/>
      <geometry><box size="0.1 0.2 0.1"/></geometry>
      <material name="Green"><color rgba="0.0 0.8 0.0 1.0"/></material>
    </visual>
    <collision>
      <origin xyz="0.05 0.0 0.0" rpy="0 0 0"/>
      <geometry><box size="0.1 0.2 0.1"/></geometry>
    </collision>
    <inertial>
      <mass value="0.05"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>
  
  <!-- Gripper Joint 1 -->
  <joint name="Gripper_joint1" type="prismatic">
    <parent link="link6"/>
    <child link="gripper_finger_l"/>
    <origin xyz="0.1 0.0 0.0" rpy="0 0 0"/> <!-- Rotate to align axis -->
    <axis xyz="0 1 0"/>
    <limit lower="0.01" upper="0.09" effort="10" velocity="0.1"/>
  </joint>
  <link name="gripper_finger_l">
    <visual>
      <origin xyz="0.05 0.0 0.0" rpy="0 0 0"/>
      <geometry><box size="0.1 0.01 0.08"/></geometry>
      <material name="Blue"><color rgba="0.0 0.0 0.8 1.0"/></material>
    </visual>
    <collision>
      <origin xyz="0.05 0.0 0.0" rpy="0 0 0"/>
      <geometry><box size="0.1 0.01 0.08"/></geometry>
    </collision>
    <inertial>
      <mass value="0.05"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>
  
  <!-- Gripper Joint 2 -->
  <joint name="Gripper_joint2" type="prismatic">
    <parent link="link6"/>
    <child link="gripper_finger_r"/>
    <origin xyz="0.1 0.0 0.0" rpy="0 0 0"/> <!-- Rotate to align axis -->
    <axis xyz="0 -1 0"/>
    <limit lower="0.01" upper="0.09" effort="10" velocity="0.1"/>
  </joint>
  <link name="gripper_finger_r">
    <visual>
      <origin xyz="0.05 0.0 0.0" rpy="0 0 0"/>
      <geometry><box size="0.1 0.01 0.08"/></geometry>
      <material name="Blue"><color rgba="0.0 0.0 0.8 1.0"/></material>
    </visual>
    <collision>
      <origin xyz="0.05 0.0 0.0" rpy="0 0 0"/>
      <geometry><box size="0.1 0.01 0.08"/></geometry>
    </collision>
    <inertial>
      <mass value="0.05"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>
  
  

</robot>
